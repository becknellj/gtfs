                  <Menu fx:id="updateStopTimesMenu" mnemonicParsing="false" text="Stop Times">
                    <items>
                        <Menu mnemonicParsing="false" text="time updates">
                          <items>
                              <RadioMenuItem fx:id="timeForwards" mnemonicParsing="false" onAction="#updateStopTimes" text="shift forwards">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="timeUpdateGroup" />
                                 </toggleGroup>
                              </RadioMenuItem>
                              <RadioMenuItem fx:id="timeBackwards" mnemonicParsing="false" onAction="#updateStopTimes" text="shift backwards" toggleGroup="$timeUpdateGroup" />
                          </items>
                        </Menu>
                        <RadioMenuItem fx:id="drop_off_type" mnemonicParsing="false" onAction="#updateStopTimes" text="drop_off_type" toggleGroup="$timeUpdateGroup" />
                        <RadioMenuItem fx:id="pickup_type" mnemonicParsing="false" onAction="#updateStopTimes" text="pickup_type" toggleGroup="$timeUpdateGroup" />
                        <RadioMenuItem fx:id="stop_headsign" mnemonicParsing="false" onAction="#updateStopTimes" text="stop_headsign" toggleGroup="$timeUpdateGroup" />
                        <RadioMenuItem fx:id="stop_id" mnemonicParsing="false" onAction="#updateStopTimes" text="stop_id" toggleGroup="$timeUpdateGroup" />
                        <RadioMenuItem fx:id="stop_sequence" mnemonicParsing="false" onAction="#updateStopTimes" text="stop_sequence" toggleGroup="$timeUpdateGroup" />
                        <RadioMenuItem fx:id="trip_id" mnemonicParsing="false" onAction="#updateStopTimes" text="trip_id" toggleGroup="$timeUpdateGroup" />
                    </items>
                  </Menu>
              </items>
            </MenuButton>
            <Label layoutX="12.0" layoutY="25.0" prefHeight="17.0" prefWidth="233.0" text="Select each .txt file in the FTFS file:" />
            <Button fx:id="importButton" layoutX="14.0" layoutY="128.0" mnemonicParsing="false" onAction="#importFiles" text="Import" />
            <Button fx:id="displayButton" layoutX="156.0" layoutY="128.0" mnemonicParsing="false" onAction="#display" text="Display" />
            <Button fx:id="importStopsButton" layoutX="14.0" layoutY="58.0" mnemonicParsing="false" onAction="#openStopsFile" prefWidth="89.0" text="stops.txt" />
            <Button fx:id="importTripsButton" layoutX="128.0" layoutY="58.0" mnemonicParsing="false" onAction="#openTripsFile" prefWidth="89.0" text="trips.txt" />
            <Button fx:id="importStopTimesButton" layoutX="235.0" layoutY="58.0" mnemonicParsing="false" onAction="#openStopTimesFile" text="stop_times.txt" />
            <Button fx:id="importRoutesButton" layoutX="346.0" layoutY="58.0" mnemonicParsing="false" onAction="#openRoutesFile" prefWidth="89.0" text="routes.txt" />
            <Label layoutX="17.0" layoutY="103.0" text="Once a file is selected for each click inport" />
            <Label layoutX="14.0" layoutY="165.0" text="The data structures are displayed via the &quot;Display&quot; button" />
            <CheckBox fx:id="stopCheck" disable="true" layoutX="48.0" layoutY="83.0" mnemonicParsing="false" />
            <CheckBox fx:id="tripCheck" disable="true" layoutX="162.0" layoutY="83.0" mnemonicParsing="false" />
            <CheckBox fx:id="stopTimeCheck" disable="true" layoutX="269.0" layoutY="83.0" mnemonicParsing="false" />
            <CheckBox fx:id="routeCheck" disable="true" layoutX="380.0" layoutY="83.0" mnemonicParsing="false" />
            <Button layoutX="84.0" layoutY="128.0" mnemonicParsing="false" onAction="#reset" prefHeight="25.0" prefWidth="54.0" text="Reset" />
            <TextField fx:id="timeTextField" alignment="TOP_LEFT" layoutX="14.0" layoutY="207.0" prefHeight="25.0" prefWidth="144.0" visible="false" />
            <Label fx:id="instrLabel" layoutX="14.0" layoutY="190.0" text="info" visible="false" />
            <Button fx:id="enterButton" disable="true" layoutX="14.0" layoutY="286.0" mnemonicParsing="false" onAction="#enterUpdate" text="Enter" visible="false" />
            <Label fx:id="instrLabel1" layoutX="14.0" layoutY="239.0" text="Enter trip id of group:" visible="false" />
            <TextField fx:id="timeTextField1" alignment="TOP_LEFT" layoutX="14.0" layoutY="256.0" prefHeight="25.0" prefWidth="144.0" visible="false" />
            <Label fx:id="formatLabel" layoutX="164.0" layoutY="203.0" prefHeight="25.0" prefWidth="144.0" text="FORMAT" visible="false" />
            <Label fx:id="tripIdFormat" layoutX="164.0" layoutY="260.0" text="tripIdFormat" visible="false" />
             <TextArea fx:id="textArea1" editable="false" layoutX="11.0" layoutY="182.0" prefHeight="100.0" prefWidth="303.0" />
             <Button fx:id="tripSpeedButton" layoutX="320.0" layoutY="240.0" mnemonicParsing="false" onAction="#tripSpeeds" text="Display Trips Average Speed" />
         </children>
      </Pane>
   </children>
</GridPane>
