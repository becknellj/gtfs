<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gtfseditor.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="327.0" prefWidth="448.0">
         <children>
            <Label layoutX="12.0" layoutY="25.0" prefHeight="17.0" prefWidth="233.0" text="Select each .txt file in the FTFS file:" />
            <Button fx:id="importButton" layoutX="14.0" layoutY="128.0" mnemonicParsing="false" onAction="#importFiles" text="Import" />
            <Button fx:id="displayButton" layoutX="156.0" layoutY="128.0" mnemonicParsing="false" onAction="#display" text="Display" />
            <Button fx:id="importStopsButton" layoutX="14.0" layoutY="58.0" mnemonicParsing="false" onAction="#openStopsFile" prefWidth="89.0" text="stops.txt" />
            <Button fx:id="importTripsButton" layoutX="128.0" layoutY="58.0" mnemonicParsing="false" onAction="#openTripsFile" prefWidth="89.0" text="trips.txt" />
            <Button fx:id="importStopTimesButton" layoutX="235.0" layoutY="58.0" mnemonicParsing="false" onAction="#openStopTimesFile" text="stop_times.txt" />
            <Button fx:id="importRoutesButton" layoutX="346.0" layoutY="58.0" mnemonicParsing="false" onAction="#openRoutesFile" prefWidth="89.0" text="routes.txt" />
            <Label layoutX="17.0" layoutY="103.0" text="Once a file is selected for each click inport" />
            <Label layoutX="14.0" layoutY="165.0" text="The data structures are displayed via the &quot;Display&quot; button" />
            <CheckBox fx:id="stopCheck" disable="true" layoutX="48.0" layoutY="83.0" mnemonicParsing="false" />
            <CheckBox fx:id="tripCheck" disable="true" layoutX="162.0" layoutY="83.0" mnemonicParsing="false" />
            <CheckBox fx:id="stopTimeCheck" disable="true" layoutX="269.0" layoutY="83.0" mnemonicParsing="false" />
            <CheckBox fx:id="routeCheck" disable="true" layoutX="380.0" layoutY="83.0" mnemonicParsing="false" />
            <Button layoutX="84.0" layoutY="128.0" mnemonicParsing="false" onAction="#reset" prefHeight="25.0" prefWidth="54.0" text="Reset" />
         </children>
      </Pane>
   </children>
</GridPane>
